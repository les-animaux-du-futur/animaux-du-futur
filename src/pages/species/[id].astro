---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getBiomes, getSpecies } from "../../functions";

export function getStaticPaths() {
  const { species } = getSpecies();
  return species.map((_, index) => {
    return {
      params: { id: index },
    };
  });
}

const { species } = getSpecies();
const {biomes} = getBiomes()
const { id } = Astro.params;
const specie = species[id];

const name = specie.name;
const description = specie.EvolutionDescription;
const biomeName = specie.biome;
const height = specie.height;
const life = specie.life;
const weight = specie.weight;
const image = specie.speciesImage;
const diet = specie.diet;
const expedition = specie.expedition;
const explorator = specie.explorator;

const biome = biomes.filter((biome) => biome.name === biomeName);
const {color} = biome[0];

function formatSpeciesId(id) {
    if (id.length === 1) {
        return `00${id}`;
    } else if (id.length === 2) {
        return `0${id}`;
    } else {
        return id;
    }
}

---

<BaseLayout>
    <section class="header">
        <div class="header-container">
            <div class="text-header">
                <h1 class="name">{name}</h1>
                <div class="infos">
                    <div class="biome" style="background-color: ${biomeColor};">
                        <h4>{biomeName}</h4>
                    </div>
                    <h4 class="id">#{formatSpeciesId(specie.id)}</h4>
                </div>
                <div>
                    <p class="expedition">Découvert pendant l’Expédition {expedition}</p>
                    <p class="explorateur">Par l’explorateur.ice {explorator}</p>
                </div>
            </div>
            <img src={'/' + image} alt="image" />
        </div>
        <div class="img_arrow">
            <img src="/assets/images/arrow2.svg" alt="flèche">
        </div>
    </section>
    <section class="container">
      <div class="content">
          <div class="left-content">
              <h2>Description</h2>
              <p class="description">{description}</p>
          </div>
          <div class="right-content">
            <h2>Caractéristiques</h2>
              <div class="caracteristiques">
                  <div class="left-side">
                      <div class="block-infos biome">
                          <div class="block-img">
                              <img src="/assets/images/Icon-animal-biome.svg" alt="icone animal biome">
                          </div>
                          <div class="title-infos">
                              <h4>Biome:</h4>
                              <h4>{biome}</h4>
                          </div>
                      </div>
                      <div class="block-infos poids">
                          <div class="block-img">
                              <img src="/assets/images/Icon-animal-poids.svg" alt="icone animal poids">
                          </div>
                          <div class="title-infos">
                              <h4>Poids:</h4>
                              <h4>{weight}</h4>
                          </div>
                      </div>
                      <div class="block-infos taille">
                          <div class="block-img">
                              <img src="/assets/images/Icon-animal-taille.svg" alt="icone animal taille">
                          </div>
                          <div class="title-infos">
                              <h4>Taille:</h4>
                              <h4>{height}</h4>
                          </div>
                      </div>
                  </div>
                  <div class="right-side">
                      <div class="block-infos régime">
                          <div class="block-img">
                              <img src="/assets/images/Icon-animal-regime.svg" alt="icone animal regime">
                          </div>
                          <div class="title-infos">
                              <h4>Régime:</h4>
                              <h4>{diet}</h4>
                          </div>
                      </div>
                      <div class="block-infos longévité">
                          <div class="block-img">
                              <img src="/assets/images/Icon-animal-longevite.svg" alt="icone animal longetive">
                          </div>
                          <div class="title-infos">
                              <h4>Longévité:</h4>
                              <h4>{life}</h4>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
    </section>
</BaseLayout>

<style lang="scss" define:vars={{color}}>
