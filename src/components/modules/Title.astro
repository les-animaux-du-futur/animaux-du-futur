---

interface Props {
  title: string
  sideText: string
}

const {
  title,
  sideText
} = Astro.props
---


<div class="container title">
  <h1>{title}</h1>
  <h3 class="sideText">{sideText}</h3>
</div>


<style lang="scss">
  .container {
    padding: 50px 30px;
    max-width: 800px;
    margin: 0 auto;
    @media (min-width: 1000px) {
      max-width: 800px;
    }
    @media (min-width: 1200px) {
      max-width: 1000px;
    }
    @media (min-width: 1460px) {
      max-width: 1200px;
    }
  }
  .title {
    margin: 0 auto;
    width: fit-content;
    h1 {
      margin-bottom: 0;
      margin-left: 0;
      margin-right: 0;
    }
    .sideText {
      margin: 0;
      margin-left: auto;
      width: fit-content;

    }
  }
</style>
