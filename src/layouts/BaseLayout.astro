---

import MobileHeader from "../components/MobileHeader.astro";
import SideBar from "../components/SideBar.astro";
import { SITE } from "../config";
import "../styles/app.css";

const {title, description} = Astro.props
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description}/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{title}</title>
  </head>

  <body>
    <SideBar />
    <MobileHeader />

    <slot />
  </body>
  <footer>
    <div class="container_return">
      <button id="return-to-top" class="return">
        <img src="/assets/images/arrow4.svg" alt="icone flèche">
      </button>
    </div>
    <div class="container_footer">
    <a class="mention" href="/MentionsLegales">Mentions légales © <span id="date"></span> This work is licensed under </a>
    <a class="cc_link" href="https://creativecommons.org/licenses/by-nc-sa/4.0/?ref=chooser-v1" title="Cliquez"><img src="/assets/images/icon_footer1.svg" alt="icone 1"></a>
    <img src="/assets/images/icon_footer2.svg" alt="icone 2">
    <img src="/assets/images/icon_footer3.svg" alt="icone 3">
    <img src="/assets/images/icon_footer4.svg" alt="icone 4">
  </div>
  </footer>

  <script>
    document.getElementById("date").textContent = String(
      new Date().getFullYear()
    );
    </script>
  <script>
    
    const btn = document.getElementById("return-to-top");

    btn.addEventListener('click', () => {
      window.scrollTo({
          top: 0,
          behavior: 'smooth' // Pour un défilement fluide
      });

    })


  </script>
</html>

<style lang="scss" is:global>
  html {
    // @media (min-width: 660px) {
    //   padding-left: 5rem;
    // }
  }
  body {
    margin: 0;
    padding: 0;
    background: #131515;
    color: #fff;
    font-family: Blinker-Regular;

    footer {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: flex-end;
      padding: 2.5rem 0.5rem;
      margin-top: 4rem;
      a {
        font-size: 14px;
        font-weight: 700;
        color: #fff;
        text-decoration: none;
        margin-right: 12px;
      }
      .container_return{
        width: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        .return{
          display: flex;
          position: fixed;
          justify-content: center;
          align-items: center;
          width: 35px;
          height: 35px;
          border-radius: 50%;
          background: rgba(19, 21, 21, 0.30);
          backdrop-filter: blur(10px);
          bottom: 100px;
          margin-right: 4%;
          border: 1px solid #fff;
          cursor: pointer;
          transition: 0.2s;
          &:hover{
            transition: 0.2s;
            filter: brightness(50%);
          }
        }
      }
      .container_footer{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        margin-right: 92px;
        img{
          width: 18px;
          height: 18px;
          gap: 4px;
        }
        .cc_link{
          padding: 0;
          margin: 0;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }
    }
  }
  /*configuration du container*/
  .container-fluid {
    @media (max-width: 660px) {
      padding-left: 80px;
    }
  }
  :root {
    --containerSideSpace: 1.8rem;
    @media (min-width: 600px) {
      --containerSideSpace: 6rem;
    }
    @media (min-width: 1000px) {
      --containerSideSpace: 8rem;
    }
    @media (min-width: 1200px) {
      --containerSideSpace: 12rem;
    }
    @media (min-width: 1460px) {
      --containerSideSpace: 16rem;
    }
  }
  .contaierSpaceLeft {
    padding-left: var(--containerSideSpace);
  }
  .contaierSpaceRight {
    padding-right: var(--containerSideSpace);
  }
  .container {
    padding: 0 var(--containerSideSpace);
    // padding: 50px 30px;
    // max-width: 800px;
    // margin: 0 auto;

    // @media (min-width: 1000px) {
    //   max-width: 800px;

    // }
    // @media (min-width: 1200px) {
    //   max-width: 1000px;
    // }
    // @media (min-width: 1460px) {
    //   max-width: 1200px;

    // }
  }

  h1 {
    line-height: 90%;
    font-weight: 500;
    color: #fff;
    font-family: Blinker-Bold;
  }
  h2 {
    font-weight: 500;
    color: #fff;
  }
  h3 {
    font-size: 25px;
    font-weight: 500;
    color: #fff;
  }
  h4 {
    font-size: 20px;
    font-weight: 500;
    color: #fff;
  }
  p {
    font-size: 14px;
    font-weight: 400;
    color: #fff;
  }
  a {
    font-size: 14px;
    font-weight: 700;
    color: #fff;
  }

  @media screen and (min-width: 768px) {
    h3 {
      font-size: 28px;
    }
    h4 {
      font-size: 24px;
    }
    p {
      font-size: 18px;
    }
    a {
      font-size: 18px;
    }
  }
</style>
